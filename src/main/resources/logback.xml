<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
	<logger name="org.eclipse.jetty" level="DEBUG"/>
	<!-- Configure Discord4J logger level -->
	<logger name="sx.blah.discord.Discord4J" level="DEBUG"/>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
		<file>log/bootstrap.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>log/bootstrap.%i.log</fileNamePattern>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
	</appender>

	<root level="debug">
		<appender-ref ref="CONSOLE"/>
		<!-- Uncomment the next line to also log to a file -->
		<!-- <appender-ref ref="FILE"/> -->
	</root>
</configuration>